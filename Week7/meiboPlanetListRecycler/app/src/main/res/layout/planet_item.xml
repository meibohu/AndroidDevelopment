<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/list_format_padding_horizontal"
    android:paddingEnd="@dimen/list_format_padding_horizontal"
    >

    <ImageView
        android:id="@+id/planet_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/list_item_logo_margin_horizontal"
        android:layout_marginRight="@dimen/list_item_logo_margin_horizontal"
        android:contentDescription="@string/planet_symbol"
        android:paddingTop="@dimen/list_item_padding_vertical"
        android:paddingBottom="@dimen/list_item_top_line_padding_vertical"
        android:scaleType="fitCenter"
        android:src="@drawable/pluto_symbol" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/restuarant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/list_item_top_line_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:text="@string/type_MC"
            android:textSize="@dimen/list_item_top_line_font_size"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/restuarant_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:text="@string/type_MC"
            android:textSize="@dimen/list_item_top_line_font_size"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/restuarant_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:text="@string/cost_MC"
            android:textSize="@dimen/list_item_top_line_font_size"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/restuarant_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:paddingTop="@dimen/list_item_padding_vertical"
            android:paddingBottom="@dimen/list_item_padding_vertical"
            android:text="@string/Location"
            android:textSize="@dimen/list_item_top_line_font_size"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>